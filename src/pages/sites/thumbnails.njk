---
layout: default.njk
permalink: "/sites/"
---

<div class="mb-10">
    <a href="/sites-list/" class="text-base leading-7 text-red-700">Text-only list <span aria-hidden="true">â†’</span></a>
</div>

<ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8 list-none">
    {% for site in sites %}
    <li class="relative">
        <a href="/sites/{{ site.name | slugify}}/">
            <div
                class="group aspect-w-10 aspect-h-7 block w-full overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-red-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
                {% image "./src/screenshots/" + site.images[0] , "pointer-events-none object-cover group-hover:opacity-75", site.name %}
                <button type="button" class="absolute inset-0 focus:outline-none">
                    <span class="sr-only">View details for {{ site.name }}</span>
                </button>
            </div>
            <p class="pointer-events-none mt-2 block truncate text-sm font-medium text-gray-900">{{ site.name }}</p>
            <p class="pointer-events-none block text-sm font-medium text-gray-600 line-clamp-1">{{ site.description }}
            </p>
        </a>
    </li>
    {% endfor %}
</ul>
